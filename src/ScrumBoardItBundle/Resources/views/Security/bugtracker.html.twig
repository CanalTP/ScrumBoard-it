{% extends "ScrumBoardItBundle:Security:login.html.twig" %}

{% block header %}
    {{ include('ScrumBoardItBundle:Default:logNavBar.html.twig') }}
{% endblock %}

{% block header_title %}
    Choisissez votre bugtracker
{% endblock %}

{% block userForm %}
    {{ form_row(form.api) }}
    <strong>Entrez vos identifiants correspondants:</strong>
    {{ parent() }}
    <div class="alert alert-info text-center">
    	<div>
    	    {% if options.jira.url %}
        		Url Jira: {{ options.jira.url }} <br/>
		    {% else %}
				Connexion à Jira impossible : aucune URL n'est définie
		    {% endif %}
		</div>
		<a href="{{ path('profile') }}?page=jira" class='btn btn-default btn-sm'>Editer l'url</a>
    </div>
{% endblock %}

{% block rememberMe %}{% endblock %}
{% block bottom %}{% endblock %}