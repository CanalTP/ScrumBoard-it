{% extends "ScrumBoardItBundle::base.html.twig" %}

{% block title %}
    Connexion - {{ parent() }}
{% endblock %}

{% block body %}
<div class="container">
	<div class="row ">
		<div class="Absolute-Center is-Responsive">
			<div id="formJira">

				<img src="{{ asset('bundles/scrumboardit/images/header.png') }}" />
				<hr class="soften">

				{{ form_start(form) }}

                    <div class="form-group input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-user"></span>
                        </span>
                        {{ form_row(form.username) }}
                    </div>
                    <div class="form-group input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-lock"></span>
                        </span>
                        {{ form_row(form.password) }}
                    </div>
                    <div>
                        {{ form_row(form.api) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form._remember_me) }}
                        <button class="btn btn-def btn-block" type="submit" value="Connexion">login</button>
                    </div>
                    {% if error %}
                        <div class="error">{{ error.message|trans({},'messages') }}</div>
					{% endif %}

                {{ form_rest(form) }}
                {{ form_end(form) }}
			</div>
			Nouveau ici ? <a href="{{ path('discover') }}">Connectez-vous en tant que visiteur</a>
		</div>
	</div>
</div>
{% endblock%}
